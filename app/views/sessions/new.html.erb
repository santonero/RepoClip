<%= turbo_frame_tag "add" do %>
  <%= form_with url: session_path, id: "login" do |form| %>
    <% if response.status == 422 %>
      <div class="form-group has-error">
      <span class="top"></span>
    <% else %>
      <div class="form-group">
    <% end %>
        <%= form.label :account, "Username or email", class: "form-label" %>
        <%= form.text_field :account, class: "form-input", data: { controller: "clear-login", action: "input->clear-login#clear" } %>
      </div>
      <div class="form-group <%= 'has-error' if response.status == 422 %>">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-input", data: { controller: "clear-login", action: "input->clear-login#clear" } %>
      </div>
      <%= link_to "Forgot your password?", new_password_reset_path, "data-turbo-frame": "_top", class: "d-inline-block mt-1 text-small" %>
  <% end %>
<% end %>
